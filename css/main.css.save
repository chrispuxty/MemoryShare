@charset "utf-8";
/* Master Stylesheet for Dementia Project */

html,body{
  height:100%; width: 100%; font-family: Arial, Helvetica, sans-serif; letter-spacing: 4px;
  overflow-x: hidden; overflow-y: hidden; margin: 0px;}
  
  
body {
	background: #000;
	color: #fff;
	text-align: center;
	width: auto;
	margin-left: auto;
	margin-right: auto;
	font-size: 20pt;
-webkit-touch-callout: none;
-webkit-user-select: none;
-khtml-user-select: none;
-moz-user-select: none;
-ms-user-select: none;
user-select: none;


}
	
video {height: 99%; width: 100%;}
	
#topBar {height: 14%; color: #7F7F7F; padding-top: 20px; text-spacing: 0px;}
#content {height: 37.75%;}
.buttonActivated{width: 19.5%; margin-left: 0.25%; margin-right: 0.25%; height: 100%; float: left;}
#buttonDiv {height: 47.45%; width: 61.5%; margin: 1.75% 21.05% auto 17.45%;} 

.button {width: 21.5%;
margin-left: 1.75%;
margin-right: 1.75%;
height: 100%;
float: left;
font-size: 20pt;
text-shadow: black 0.05em 0.05em 0.1em;}


.buttonBack1 {position: relative;
width: 100%;
height: 59%;
z-index: 10;
background: inherit;
border-radius: 15px;}

.buttonBack2 {position: relative;
width: 80%;
height: 41%;
z-index: 5;
background: inherit;
margin: auto auto auto auto;}

.buttonBack3 {position: relative;
top: -100%;
width: 100%;
height: 100%; 
z-index: 1;
background: black;}

.buttonActivated .buttonBack1 {height: 68%;}
.buttonActivated .buttonBack2 {height: 32%;}
.buttonActivated .buttonBack3 {}
.buttonActivated .thumbnail {height: 33%; top: 34%;}
.buttonActivated .buttonText {top: 73%;}

#stopButton {position: absolute; background: red; right: -42px;
bottom: 79px;
width: 207px;
height: 207px; border-radius: 100%; z-index: 2;}

.thumbnail {position: absolute;
width: 90%;
height: 50%;
margin: 5px auto 5px auto;
background-size: cover;
background-colour: black;
background-position: center;
background-repeat: repeat-x;
left: 5%;
right: 5%;
top: 2%;
border: white 2.5px solid;
border-radius: 3%;
box-sizing: border-box;}

.buttonText {position: absolute;
top: 60%; 
left: 5%;
right: 5%;}

.buttonMoreText {position: absolute;
top: 60%; 
left: 5%;
right: 5%;
display: none;}


.buttonActivated .buttonMoreText {top: 22%; display: block;}

.buttonActivated {height: 128%;
				margin-top: -12%;}
				
#editBox{width: 42%;
background: white;
color: black;
margin: auto;
padding: 5px;
font-size: medium;
letter-spacing: normal;}
